{
  "manifest_version": 2,
  "name": "Make Rikkeisoft News Great Again",
  "short_name": "Make Rikkeisoft News Great Again",
  "description": "Use your favorite emoticons on Rikkeisoft News.",
  "homepage_url": "https://ext.huynq.net/",
  "version": "0.1.1",
  "browser_action": {
    "default_icon": "img/icon64.png",
    "default_title": "Make Rikkeisoft Great Again"
  },
  "icons": {
    "16": "img/icon32.png",
    "48": "img/icon64.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://rikkei.vn/*",
        "*://*.rikkei.vn/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "*://rikkei.vn/*",
    "*://*.rikkei.vn/*"
  ]
}
